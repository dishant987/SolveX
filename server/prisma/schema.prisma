generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String  @id @default(uuid())
  email     String  @unique
  password  String?
  firstName String?
  lastName  String?
  imageUrl  String?
  role      Role    @default(USER)

  accounts    AuthAccount[]
  resetTokens PasswordResetToken[]
  problems    Problem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuthAccount {
  id         String       @id @default(uuid())
  provider   AuthProvider
  providerId String?
  userId     String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerId])
  @@unique([userId, provider])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
}

enum Role {
  USER
  ADMIN
}

enum AuthProvider {
  LOCAL
  GOOGLE
}

model Problem {
  id          String   @id @default(uuid())
  title       String
  description String
  difficulty  Difficulty
  tags        String[]
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  examples Json
  constraints String
  hints String?
  editorial String?

  testCases Json
  codeSnippets Json
  referenceSolution Json
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
enum Difficulty {
  EASY
  MEDIUM
  HARD
}
